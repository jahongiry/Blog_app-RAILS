<h1 class="descriptive-title">Here is a specific user<h1>

<%= render "user_card" %>
<div class="bio-card">
<h2>Bio<h2>
<p><%= @user.bio %></p>
</div>

<% @user.recent_three_posts.each do |post| %>
    <div class="post-card">
    <br>
    <%= link_to  post.title, user_post_path(@user, post)  %>

<p><%= post.text %></p>
<span class="counter-card">
<span>Comments: <%= post.comments_counter %></span>

<span>, Likes: <%= post.likes_counter %></span>
</span>
</div>
<% end %>
<%= link_to  "Create new Post", new_user_post_path(@user)  %>

<button><%= link_to  "See all posts", user_posts_path(@user)  %></button>

